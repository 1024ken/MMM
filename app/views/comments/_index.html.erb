<div class= box24>
  <ul>
    <% comments.each do |comment| %>
      <% unless comment.id.nil? %>
        <p class="left-comment"><%= comment.user.name %>さんがコメントしました。</p>
        <p class="left"><%= comment.content %></p>
        <% if current_user.id == comment.user.id %>
          <p class="right">
            <%= link_to '編集', edit_blog_comment_path(blog, comment), class: "btn btn-default btn-sm btn-primary" %>
            <%= link_to '削除', blog_comment_path(blog, comment), class: "btn btn-default btn-sm btn btn-danger", method: :delete, remote: true, data: { confirm: '本当に削除していいですか？' } %>
          </p>
        <% end %>
      <% end %>
    <% end %>
  </ul>
</div>