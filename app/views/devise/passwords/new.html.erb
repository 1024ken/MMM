<h2>パスワード再設定</h2>
<%= form_for(resource, as: resource_name, url: password_path, html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>
  <div class="actions">
    <%= f.submit "再設定メールを送信する" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>