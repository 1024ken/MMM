<div class="container-users">
  <h2>ユーザー一覧</h2>
  <% @users.each do |user| %>
    <div class="container-child col-md-2 col-sm-4 col-xs-6 users">
      <div class= "inner">
        <%= link_to profile_img(user), users_path(user.id) %>
        <%= user.email %>
        <%= render partial: 'follow_form', locals: { user: user } if signed_in?%>
        <% if user.id != current_user.id %>
          <div class="item">
            <%= link_to user.name, users_path %>
            <%= link_to 'メッセージ', conversations_path(sender_id: current_user.id, recipient_id: user.id), method: 'post'%>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>